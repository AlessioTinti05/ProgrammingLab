def PrimaParola (doc):
    with open (doc, "r") as file:
        diz = {}
        contenuto = file.read()
        punto = contenuto.split(.)
        virgola = contenuto.split(,)
        excl = contenuto.split(!)
        interr = conenuto.split(?)
        word = contenuto.split()
